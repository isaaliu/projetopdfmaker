<!DOCTYPE html>
<html>
<head>
    <title>Relatório de Dados</title>
    <link rel="stylesheet" 
          href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.15.0/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center">Relatório de Clientes</h1>
        <a href="/relatorio/pdf">Gerar PDF</a>
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>NOME</th>
                    <th>EMAIL</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(dado => { %>
                <tr>
                    <td><%= dado.id %></td>
                    <td><%= dado.name %></td>
                    <td><%= dado.email %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <p class="text-right">Página 1 de 1</p>
        <p class="text-muted">Gerado em: <%= new Date().toLocaleDateString() %></p>
    </div>
</body>
</html>